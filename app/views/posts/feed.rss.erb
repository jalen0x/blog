<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>Jalen's Blog</title>
    <description>A Rails engineer's thoughts on building products, technical exploration, and software development.</description>
    <link>https://jalenx.me</link>
    <atom:link href="https://jalenx.me/feed.xml" rel="self" type="application/rss+xml"/>
    <language>en-us</language>
    <lastBuildDate><%= @posts.first&.published_at&.rfc2822 || Time.current.rfc2822 %></lastBuildDate>
    <% @posts.each do |post| %>
    <item>
      <title><%= post.title %></title>
      <link>https://jalenx.me<%= post_path(slug: post.slug) %></link>
      <guid isPermaLink="true">https://jalenx.me<%= post_path(slug: post.slug) %></guid>
      <pubDate><%= post.published_at.rfc2822 %></pubDate>
      <description><%= post.description %></description>
      <content:encoded><![CDATA[<%= markdown(post.body) %>]]></content:encoded>
    </item>
    <% end %>
  </channel>
</rss>
