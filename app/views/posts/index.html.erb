<% content_for(:json_ld) do %>
<%= raw website_json_ld %>
<%= raw breadcrumb_json_ld([{ name: "Home", url: canonical_url("/") }]) %>
<% end %>

<div class="max-w-2xl">
  <ul class="divide-y divide-gray-100">
    <% @posts.each do |post| %>
      <li class="py-6 first:pt-0">
        <%= link_to post_path(slug: post.slug), class: "group block" do %>
          <time class="text-sm text-gray-500 tabular-nums"><%= post.formatted_date %></time>
          <h2 class="mt-1 text-lg font-medium text-gray-900 group-hover:text-primary-600 transition-colors">
            <%= post.title %>
          </h2>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
